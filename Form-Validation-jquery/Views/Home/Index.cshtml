@{
    ViewData["Title"] = "Form Validation Page";
}

@{
    Layout = null;
}

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>

<style>
    body {
        font-family: Arial, sans-serif;
        margin: 20px;
    }

    form {
        max-width: 400px;
        margin: auto;
    }

    div {
        margin-bottom: 15px;
    }

    label {
        display: block;
        margin-bottom: 5px;
    }

    input {
        width: 100%;
        padding: 8px;
        box-sizing: border-box;
    }

    button {
        padding: 10px 15px;
        margin-right: 10px;
    }

    label.error {
        color: red;
        font-size: 0.9em;
    }
</style>

<h2>J-Query Form Validation</h2>
<form id="myForm">
    <div>
        <label for="name">Name:</label>
        <input type="text" id="name" name="name">
    </div>
    <div>
        <label for="email">Email:</label>
        <input type="email" id="email" name="email">
    </div>
    <div>
        <label for="age">Age:</label>
        <input type="number" id="age" name="age" min="1" max="100">
    </div>
    <button type="submit">Submit</button>
</form>

<script>
    $(document).ready(function () {
        $("#myForm").submit(function (e) {
            e.preventDefault();
            var name = $("#name").val();
            var email = $("#email").val();
            var age = $("#age").val();
            $(".error").remove();


            if (name.length < 3) {
                alert("Name must be at least 3 characters long");
            }

            @* if (name.length < 3) {
                $("#name").after('<label class="error">Name must be at least 3 characters long</label>');
            } *@

            if (email.length < 5) {
                $("#email").after('<label class="error">Email must be at least 5 characters long</label>');
            }
            if (age < 1 || age > 100) {
                $("#age").after('<label class="error">Age must be between 1 and 100</label>');
            }
        })
    })
</script>